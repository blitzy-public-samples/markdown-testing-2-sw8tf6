{
  "watch": [
    "src/**/*"
  ],
  "ext": ".ts,.js,.json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/coverage",
    "src/dist"
  ],
  "exec": "ts-node -r tsconfig-paths/register ./src/index.ts",
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "./tsconfig.json"
  },
  "delay": "1000",
  "restartable": "rs",
  "verbose": true,
  "colours": true,
  "events": {
    "restart": "clear",
    "crash": "exit 1"
  },
  "legacyWatch": false,
  "signal": "SIGTERM"
}